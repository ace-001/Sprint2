package com.cg.hcsAdmin.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.cg.hcsAdmin.dao.CenterDao;
import com.cg.hcsAdmin.dto.DiagnosticCenter;

@Service
public class DiagnosticcenterService 
{	
	@Autowired
	CenterDao cdao;
	public void setCdao(CenterDao cdao)
	{
		this.cdao = cdao;
	}
	
	@Transactional
	public DiagnosticCenter addCenter(DiagnosticCenter center)
	{
		return cdao.save(center);
	}
	
	@Transactional(readOnly = true)
	public String deleteCenter(Integer centerId)
	{
		cdao.deleteById(centerId);
		return "Center is deleted";
	}
}
